{
  "sectionTypes": {
    "hero": {
      "description": "Hero/banner section for homepage",
      "priority": "high",
      "commonUseCases": [
        "Homepage hero",
        "Landing page banner",
        "Product showcase",
        "Company introduction"
      ],
      "essentialSettings": [
        {
          "id": "heading_text",
          "type": "text",
          "label": "Main Heading",
          "default": "Welcome to Our Store",
          "required": true,
          "validation": "min_length:3|max_length:100"
        },
        {
          "id": "subheading_text",
          "type": "textarea",
          "label": "Subheading",
          "default": "Discover amazing products and services",
          "required": false,
          "validation": "max_length:200"
        },
        {
          "id": "background_image",
          "type": "image_picker",
          "label": "Background Image",
          "required": false,
          "info": "High-quality image for visual impact"
        }
      ],
      "recommendedSettings": [
        {
          "id": "text_alignment",
          "type": "select",
          "label": "Text Alignment",
          "options": [
            {"value": "left", "label": "Left"},
            {"value": "center", "label": "Center"},
            {"value": "right", "label": "Right"}
          ],
          "default": "center"
        },
        {
          "id": "text_color",
          "type": "color",
          "label": "Text Color",
          "default": "#ffffff"
        },
        {
          "id": "overlay_color",
          "type": "color",
          "label": "Overlay Color",
          "default": "rgba(0,0,0,0.5)"
        },
        {
          "id": "height",
          "type": "range",
          "label": "Section Height",
          "min": 300,
          "max": 800,
          "default": 500,
          "unit": "px"
        }
      ],
      "advancedSettings": [
        {
          "id": "animation",
          "type": "select",
          "label": "Animation Effect",
          "options": [
            {"value": "none", "label": "None"},
            {"value": "fadeIn", "label": "Fade In"},
            {"value": "slideUp", "label": "Slide Up"},
            {"value": "slideInLeft", "label": "Slide In Left"}
          ],
          "default": "fadeIn"
        },
        {
          "id": "parallax_effect",
          "type": "checkbox",
          "label": "Enable Parallax Effect",
          "default": false
        },
        {
          "id": "video_background",
          "type": "url",
          "label": "Video Background URL",
          "info": "YouTube or Vimeo URL"
        }
      ],
      "suggestedBlocks": [
        {
          "type": "cta_button",
          "name": "Call-to-Action Button",
          "settings": [
            {
              "id": "button_text",
              "type": "text",
              "label": "Button Text",
              "default": "Get Started"
            },
            {
              "id": "button_url",
              "type": "url",
              "label": "Button URL",
              "default": "/"
            },
            {
              "id": "button_style",
              "type": "select",
              "label": "Button Style",
              "options": [
                {"value": "primary", "label": "Primary"},
                {"value": "secondary", "label": "Secondary"},
                {"value": "outline", "label": "Outline"}
              ],
              "default": "primary"
            }
          ]
        }
      ]
    },
