      alert('Thank you for your inquiry! We will contact you soon.');
      this.reset();
    });
  }
});
</script>

<style>
/* Product Gallery */
.product-gallery {
  position: sticky;
  top: 100px;
}

.thumbnail-images {
  padding-bottom: var(--spacing-sm);
}

.thumbnail-images img {
  transition: opacity 0.2s ease;
}

.thumbnail-images img:first-child {
  opacity: 1;
}

/* Product Actions */
.product-actions {
  flex-wrap: wrap;
}

/* Lead Form */
.lead-form-container {
  position: sticky;
  top: 100px;
}

/* Responsive */
@media (max-width: 768px) {
  .product-hero .container > div {
    grid-template-columns: 1fr;
  }
  
  .product-sidebar {
    order: -1;
  }
  
  .lead-form-container,
  .product-gallery {
    position: static;
  }
}
</style>